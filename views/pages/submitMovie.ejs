<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head', { pageTitle: 'Submit' }); %>
    <link rel="stylesheet" type="text/css" href="/assets/css/form.css" />
</head>

<body class="container-fluid">
    <% include ../partials/nav %>

    <main class="container col-md-offset-4 col-md-4">
        <h2>Submit</h2>
        <form class="form-horizontal" action="/api/movies/submit" method="POST">
            <div class="form-group row">
                <label for="title" class="col-sm-2 form-control-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" id="title" name="title" class="form-control" placeholder="Title" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="year" class="col-sm-2 form-control-label">Year</label>
                <div class="col-sm-10">
                    <input type="text" name="year" id="year" class="form-control" placeholder="Year">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-offset-2 col-sm-2">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </div>
        </form>
    </main>

    <% include ../partials/scripts %>
</body>

</html>
